{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./types.d.ts", "./node_modules/@types"]
    },
    "include": ["./**/*", "types.d.ts"],
    "exclude": ["node_modules"]
}
